<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1Fcccccc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#30D67C9B"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/gameInfo"
            android:background="#FF009688"
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="a011"
            android:textColor="#6C5716"
            android:textStyle="bold"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#80D67C9B"
    android:layout_margin="3dp"
    >
    <TextView
        android:id="@+id/lvl_eInfo"
        android:background="#1CC8B8"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Easy"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lvl_nInfo"
        android:background="#1CC8B8"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Normal"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lvl_hInfo"
        android:background="#1CC8B8"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hard"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lvl_gInfo"
        android:background="#1CC8B8"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Expert"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#80D67C9B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lvl_eNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:background="@drawable/zdialog_button_new"
            android:gravity="center"
            android:tag="10"
            android:text="New\nGame"
            android:textColor="#1C3DB3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvl_nNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:background="@drawable/zdialog_button_new"
            android:gravity="center"
            android:tag="11"
            android:text="New\nGame"
            android:textColor="#1C3DB3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvl_hNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:background="@drawable/zdialog_button_new"
            android:gravity="center"
            android:tag="12"
            android:text="New\nGame"
            android:textColor="#1C3DB3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvl_gNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="3dp"
            android:layout_weight="1"
            android:background="@drawable/zdialog_button_new"
            android:gravity="center"
            android:tag="13"
            android:text="New\nGame"
            android:textColor="#1C3DB3"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80959FD8"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >
    <TextView android:id="@+id/lvl_easy"
        android:background="@drawable/zdialog_button_continue"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Easy"
        android:tag="0"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />

    <TextView android:id="@+id/lvl_normal"
        android:background="@drawable/zdialog_button_continue"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Normal"
        android:tag="1"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView android:id="@+id/lvl_hard"
        android:background="@drawable/zdialog_button_continue"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hard"
        android:tag="2"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView android:id="@+id/lvl_guru"
        android:background="@drawable/zdialog_button_continue"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Expert"
        android:tag="3"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3B7CD"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/go_back"
            android:background="@drawable/zdialog_select_another"
            android:textSize="16sp"
            android:layout_margin="3dp"
            android:padding="8sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="다른 퍼즐 선택하기"
            android:tag="0"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>