<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8Fcccccc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80D67C9B"
        android:layout_margin="3dp"
        >
        <TextView
            android:id="@+id/lvl_eInfo"
            android:background="#1CC8B8"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Easy"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvl_nInfo"
            android:background="#1CC8B8"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Normal"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lvl_hInfo"
            android:background="#1CC8B8"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Hard"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lvl_gInfo"
            android:background="#1CC8B8"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Expert"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80D67C9B"
        android:layout_margin="3dp"
        >
        <TextView android:id="@+id/lvl_eNew"
            android:background="#BC3939"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="New\nGame"
            android:tag="10"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />

        <TextView android:id="@+id/lvl_nNew"
            android:background="#BC3939"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="New\nGame"
            android:tag="11"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />
        <TextView android:id="@+id/lvl_hNew"
            android:background="#BC3939"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="New\nGame"
            android:tag="12"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />
        <TextView android:id="@+id/lvl_gNew"
            android:background="#BC3939"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="New\nGame"
            android:tag="13"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80959FD8"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >
    <TextView android:id="@+id/lvl_easy"
        android:background="#6D76AA"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Easy"
        android:tag="0"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />

    <TextView android:id="@+id/lvl_normal"
        android:background="#6D76AA"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Normal"
        android:tag="1"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView android:id="@+id/lvl_hard"
        android:background="#6D76AA"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hard"
        android:tag="2"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView android:id="@+id/lvl_guru"
        android:background="#6D76AA"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Expert"
        android:tag="3"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#959FD8"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/go_back"
            android:background="#DDD37B"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Go Back to Puzzle Selection"
            android:tag="0"
            android:textColor="#1C3DB3"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>