<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4682A1"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <TextView android:id="@+id/lvl_easy"
        android:background="?attr/selectableItemBackground"        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Easy"
        android:tag="0"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />

    <TextView android:id="@+id/lvl_normal"
        android:background="?attr/selectableItemBackground"        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Normal"
        android:tag="1"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView android:id="@+id/lvl_hard"
        android:background="?attr/selectableItemBackground"        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hard"
        android:tag="2"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
    <TextView android:id="@+id/lvl_expert"
        android:background="?attr/selectableItemBackground"        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Expert"
        android:tag="3"
        android:textColor="#1C3DB3"
        android:textStyle="bold" />
</LinearLayout>